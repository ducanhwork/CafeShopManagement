<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CafeManagementApplication" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="BillRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <style name="BillLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="BillValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>
    <!-- styles.xml -->
    <style name="TextAppearance_App_BodyMedium" parent="TextAppearance.Material3.BodyMedium" />

    <style name="Theme.CafeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorOnPrimary">@color/coffee_on_primary</item>
        <item name="colorPrimaryContainer">@color/coffee_primary_variant</item>

        <item name="colorSecondary">@color/coffee_accent</item>
        <item name="colorOnSecondary">@color/coffee_on_accent</item>

        <item name="colorSurface">@color/coffee_surface</item>
        <item name="colorSurfaceVariant">@color/coffee_surface_variant</item>
        <item name="colorOnSurface">@color/coffee_text_primary</item>
        <item name="colorOutline">@color/coffee_outline</item>

        <!-- TextInput filled style default -->
        <item name="textInputStyle">@style/Cafe.FilledTextInput</item>
    </style>
    <style name="Cafe.FilledTextInput" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/coffee_surface_variant</item>
        <item name="boxStrokeColor">@color/coffee_outline</item>
        <item name="hintTextColor">@color/coffee_text_secondary</item>
    </style>
    <style name="Cafe.OutlinedTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/coffee_primary</item>
        <item name="hintTextColor">@color/coffee_primary</item>
    </style>
    <style name="Cafe.OutlinedDropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/coffee_primary</item>
        <item name="hintTextColor">@color/coffee_primary</item>
    </style>

    <style name="Theme.CafeManagementApplication" parent="Base.Theme.CafeManagementApplication" />
</resources>

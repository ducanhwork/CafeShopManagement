<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_surface"
    tools:context=".view.fragment.CreateVoucherFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="480dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/coffee_surface_variant"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- === KHU VỰC ĐÃ SỬA: Title và nút Close === -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Create New Voucher"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="@color/coffee_text_primary" />

<!--                    &lt;!&ndash; NÚT CLOSE/BACK MỚI &ndash;&gt;-->
<!--                    <ImageButton-->
<!--                        android:id="@+id/btnClose"-->
<!--                        android:layout_width="48dp"-->
<!--                        android:layout_height="48dp"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                        android:contentDescription="Close"-->
<!--                        android:src="@drawable/ic_close_24"-->
<!--                        app:tint="@color/coffee_text_secondary" />-->

                </RelativeLayout>
                <!-- === KẾT THÚC KHU VỰC SỬA === -->


                <!-- Voucher Code -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCode"
                    style="@style/Cafe.FilledTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Voucher Code"
                    app:helperText="Chỉ chữ &amp; số (VD: SALE11-11)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters|textNoSuggestions"
                        android:textColor="@color/coffee_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Type (PERCENT | FIXED_AMOUNT) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilType"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Type"
                    app:boxBackgroundColor="@color/coffee_surface"
                    app:hintTextColor="@color/coffee_text_secondary">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/actType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/coffee_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Value -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilValue"
                    style="@style/Cafe.FilledTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Discount Value"
                    app:helperText="PERCENT: nhập 0–100  •  FIXED: số tiền">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/coffee_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Start Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStart"
                    style="@style/Cafe.FilledTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Start Date (yyyy-MM-dd)"
                    app:endIconDrawable="@drawable/ic_calendar_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/coffee_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- End Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEnd"
                    style="@style/Cafe.FilledTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="End Date (yyyy-MM-dd)"
                    app:endIconDrawable="@drawable/ic_calendar_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/coffee_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Status (ACTIVE | INACTIVE) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStatus"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Status"
                    app:boxBackgroundColor="@color/coffee_surface"
                    app:hintTextColor="@color/coffee_text_secondary">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/actStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/coffee_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:paddingVertical="12dp"
                    android:text="Save"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/coffee_on_primary"
                    app:backgroundTint="@color/coffee_primary"
                    app:cornerRadius="16dp" />

                <!-- Progress -->
                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

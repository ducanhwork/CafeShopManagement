<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:name=".CafeShopApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.CafeApp">
        
        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".view.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CafeApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Table Management -->
        <activity
            android:name=".view.TableListActivity"
            android:exported="false" />
        
        <!-- Additional Activities from main branch -->
        <activity
            android:name=".view.ReservationActivity"
            android:exported="false" />
        <activity
            android:name=".view.ReservationListActivity"
            android:exported="false"
            android:parentActivityName=".view.ReservationActivity" />
        <activity
            android:name=".view.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.AdminHomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false" />

    </application>

</manifest>